{
  "name": "tefstrap",
  "version": "0.1.4",
  "description": "Telefonica Bootstrap Themes",
  "main": "index.js",
  "scripts": {
    "clean": "rm -fR dist && mkdir -p dist/{css,js,fonts,img,html}",
    "prebuild": "npm run clean",
    "build": "npm run build:css && npm run build:fonts && npm run build:img",
    "build:theme": "lessc less/tefstrap.less | postcss --use autoprefixer > dist/css/tefstrap.css",
    "prebuild:css": "npm run build:theme",
    "build:css": "cleancss dist/css/tefstrap.css > dist/css/tefstrap.min.css",
    "build:fonts": "cp node_modules/bootstrap/fonts/* fonts/* dist/fonts/",
    "build:img": "cp img/* dist/img",
    "dev": "npm run watch:css",
    "watch:css": "nodemon --watch less -e less --exec 'npm run build:css'",
    "release": "release-it -n --github.release --changelogCommand=\"npm run -s changelog\"",
    "prepublish": "npm run build"
  },
  "author": "TDAF <tdaf@tid.es>",
  "license": "Apache-2.0",
  "dependencies": {
    "bootstrap": "^3.3.6",
    "html5shiv": "^3.7.3",
    "respond": "^0.9.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "clean-css": "^3.4.13",
    "less": "^2.7.1",
    "nodemon": "^1.9.2",
    "postcss-cli": "^2.5.2"
  }
}
